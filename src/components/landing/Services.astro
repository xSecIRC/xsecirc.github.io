---
import BgGrid from "@/components/assets/BgGrid.astro";

const services = [
  {
    title: "Secular & International",
    description:
      "We are a global community, open to everyone, regardless of their background or beliefs.",
  },
  {
    title: "Non-Profit & Volunteer Driven",
    description:
      "We are not here to make money. We are here to make a difference. We are powered by volunteers who believe in our cause.",
  },
  {
    title: "Donation Based",
    description:
      "We rely on donations from the community to keep our servers running and our services free.",
  },
  {
    title: "Gender-Neutral",
    description:
      "We are a safe and inclusive space for everyone. We do not tolerate any form of discrimination.",
  },
];
---

<section class="border-white/20 border-b divide-y divide-white/20">
  <div class="px-8 py-6 relative">
    <BgGrid />
    <h2 class="text-3xl font-black text-white uppercase">
      Our Core Principles
    </h2>
  </div>
  <div
    class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 "
  >
    {
      services.map(({ title, description }) => (
        <div class="p-8">
          <h3 class="text-lg uppercase font-black text-white">{title}</h3>
          <p class="mt-3 text-eagle text-sm">{description}</p>
        </div>
      ))
    }
  </div>
</section>
